    <style name="PermissionBlueStyle">
        <item name="PermissionTitleColor">@color/colorTheme</item>
        <item name="PermissionMsgColor">@color/colorTheme</item>
        <item name="PermissionItemTextColor">@color/colorTheme</item>
        <item name="PermissionButtonBackground">@drawable/btn_over_white</item>
        <item name="PermissionBackround">@color/translucence</item>
        <item name="PermissionButtonTextColor">@color/colorTheme</item>
    </style>

    <!--dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
